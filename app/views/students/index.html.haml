:javascript
  $(document).ready(function() {
    $('.datatable').dataTable();
  } );

- breadcrumb :students

= link_to t('shared.add_new_item'), new_student_path, class: 'btn btn-default'
%table.table.table-condensed.datatable
  %thead
    %tr
      %th= t('student.columns.first_name')
      %th= t('student.columns.last_name')
      %th= t('shared.actions')
  %tbody
    = render students
