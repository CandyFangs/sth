= simple_form_for teacher do |f|
  = f.input :academic_title, collection: Teacher::TITLES, include_blank: false
  = f.input :first_name
  = f.input :last_name
  = f.association :subject_items, label_method: :title, value_method: :id, label: 'Subject Items', as: :check_boxes
  = link_to t('shared.back'), teachers_path, class: 'btn btn-default'
  = f.button :submit
